<div class="container">
<h2 class="page-title">Pages</h2>
<a href="/admin/pages/add-page" class="btn btn-primary">Add a new page</a>
<br><br>

<table class="table table-striped sorting">
    <thead>
        <tr class="home">
            <th>Title</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>

<tbody>
    <% pages.forEach((page)=>{ %>
        <tr id="id_<%= page._id %>"class="<%= page.slug %>">
            <td><%= page.title %></td>
            <td><a href="/admin/pages/edit-page/<%= page._id %>">Edit</a></td>
            <% if (page.slug == "home"){ %>
            <td></td>
            <% }else { %>
            <td><a class="confirmDeletion" href="/admin/pages/delete-page/<%= page._id %>">Delete</a></td>
            <% }%>
        </tr>
    <% }) %>
</tbody>



</table>
</div>



<script type="text/javascript" >

    $('tbody').sortable({
        items: "tr:not('.home')",
        placeholder: "ui-state-hightlight",
        update: function () {
            const ids = $('tbody').sortable("serialize");
            //console.log(ids)
            const url = "/admin/pages/reorder-pages";
            
            $.post(url,ids ,function(res){
                //console.log('1')
                console.log(res)
                //console.log('2')
            });
        }
    });
</script>

